.calendar {
  width: 100%;
  background: #fff;
  height: 860rpx;
}

.calendar image {
  width: 16rpx;
  height: 28rpx;
}

.pre,
.next {
  width: 60rpx;
  text-align: center;
}

.next image {
  transform: rotate(180deg);
}

.showData {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding-left: 25rpx;
  padding-right: 25rpx;
  margin-top: 40rpx;
}

.showData view {
  width: 14%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  flex-shrink: 0;
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #CFD8E0;
}

.calendar .tit {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 104rpx;
  padding: 0 100rpx;
  border-bottom: 3rpx solid #CFD8E0;

}

.current {
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #363B3E;
}

.calendar .tit .current {
  margin: 0 40rpx;
}

.calendar .content {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding-left: 25rpx;
  padding-right: 25rpx;
}

.calendar .content .itemData {
  width: 14.2%;
  height: 70rpx;
  line-height: 70rpx;
  flex-shrink: 0;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #363B3E;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 12rpx;
  position: relative;

}

.calendar .content .gray {
  color: #999;
  opacity: 0;
}

.red-circle {
  width: 11rpx;
  height: 11rpx;
  border-radius: 100%;
  background: #C32E47;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
}