page {
    background-color: #f5f5f5;
}

.page{
    width: 100%;
}

.page-fixed{
    position: fixed;
    top: 0;
    left: 0;
}

.index-page {
    width: 100%;
    margin: 0 auto;
}

.row-box {
    width: 690rpx;
    padding: 24rpx 30rpx;
    border-bottom: 1rpx solid #ECECEC;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}

.juli {
    margin-top: 20rpx;
    border-top: 1rpx solid #ECECEC;
}

.column-box {
    width: 690rpx;
    padding: 24rpx 30rpx;
    border-bottom: 1rpx solid #ECECEC;
    display: flex;
    flex-direction: column;
    background-color: #fff;
}

.row-title {
    width: fit-content;
    display: block;
    font-size: 26rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #383D40;
}

.row-title text{
    margin-left: 10rpx;
    font-weight: bold;
    font-size: 26rpx;
    color: #e92f16;
}
.row-right {
    width: fit-content;
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    font-size: 26rpx;
}

.row-right input {
    text-align: right;
}

.row-right image {
    margin-top: 30rpx;
    width: 50rpx;
    height: 50rpx;
}

.row-right textarea{
    height: 30rpx;
    margin-top: 20rpx;
}

.row-right text{
    color:rgb(100, 100, 100);
    font-size: 24;
}
.time-box {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.row-content {
    margin-top: 18rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 30rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #9DA5AE;
}

.placeholderStyle {
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #9DA5AE;
}

.row-content input {
    color: #383D40;
}

.tui-selected-list {
    background: #F6F8FA;
    border: 1px solid #e4e7ed;
    box-shadow: 0px 10px 20px 0px rgba(0, 0, 0, 0.05);
    border-radius: 12rpx;
    overflow: hidden;
    transform: translateZ(0);
}

.tui-selected-item {
    display: flex;
    align-items: center;
    padding: 26rpx 30rpx !important;
}

.tui-animation {
    transform: rotate(0deg);
    transition: all 0.2s;
}

.tui-animation-show {
    transform: rotate(180deg);
}

.tui-ml-20 {
    font-size: 24rpx;
}

.value-class {
    flex: none !important;
}

.but-ok{
    margin: 30rpx auto;
    width: 650rpx;
    height: 80rpx;
    background-color: #407dce;
    line-height: 80rpx;
    text-align: center;
    font-size: 26rpx;
    color: #ffffff;
    border-radius: 10rpx;
}

.delete{
    position: absolute;
    top: 0;
    right: 0;
    width: 16px;
    height: 16px;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 0 0 0 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 5rpx;
}

.delete .tui-icon{
    margin-left: 8rpx;
}

.no-border{
    border-bottom: none !important;
}

.column-bottom{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 26rpx;
    justify-content: space-between;
}

.column-bottom textarea{
    margin-top: 30rpx;
    flex: 1;
}

.grey-box{
    width: 690rpx;
    padding: 24rpx 30rpx;
    background-color: #f5f5f5;
    border-bottom: 1rpx solid #ECECEC;
    letter-spacing: 1rpx;
    font-size: 23rpx;
    color: rgb(144, 143, 143);
}
