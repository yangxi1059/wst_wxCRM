page {
    width: 100%;
    height: 100%;
    background-color: rgb(255, 255, 255);
}

button {
    background-color: transparent;
    border: none;
}

button::after {
    border: none;
}

.navbar {
    width: 100%;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    flex-shrink: 0;
    background-color:#fff;
    z-index:999
}

.navbar-title {
    width: 100%;
    height: 32px;
    box-sizing: border-box;
    padding-left: 115px;
    padding-right: 115px;
    position: absolute;
    left: 0;
    z-index: 10;
    color: #333;
    font-size: 30rpx;
    line-height: 32px;
    text-align: center;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.navbar-action-wrap {
    display: flex;
    align-items: center;
    position: absolute;
    left: 20rpx;
    z-index: 11;
    background-color: #fff;
}

.navbar-action-group {
    border: 1rpx solid rgb(0, 0, 0, 0.1);
    border-radius: 40rpx;
    overflow: hidden;
}

.navbar-action_item {
    padding: 3px 0;
    color: #333;
}

.navbar-action-group .navbar-action_item {
    border-right: 1px solid #f0f0f0;
    padding: 3px 14px;
}

.navbar-action-group .last {
    border-right: none;
}

.navigator_box {
    border-right: 1rpx solid rgba(255, 255, 255, 0.25);
    padding: 0px 25rpx;
}

.navigator_box:last-child {
    border-right: 1rpx solid transparent;
}

.navigator_box .ic-back {
    width: 32rpx;
    height: 32rpx;
    display: block;
}

.navigator_box .ic-home {
    width: 34rpx;
    height: 34rpx;
    display: block;
}

.index-page {
    width: 100%;
    height: 100%;
    padding-bottom: 50rpx;
}

.page-top {
    width: 680rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin: 30rpx auto 60rpx auto;
    padding-top: 40rpx;
}

.search-box {
    width: 630rpx;
    height: 80rpx;
}

.all-box {
    width: 100rpx;
    height: 50rpx;
    color: #8E98A3;
    font-size: 32rpx;
    text-align: center;
    line-height: 45rpx;
}

.menu-box {
    width: 50rpx;
    height: 50rpx;
    line-height: 38rpx;
    margin: 0rpx 0rpx 0rpx 30rpx;
}

.menu-box image {
    width: 38rpx;
    height: 38rpx;
    margin-top: 5rpx;
}

.book-column {
    width: fit-content;
    margin: 0rpx auto ;
}

.column-item {
    border-radius: 5rpx;
    width: 630rpx;
    margin: auto 0rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
    padding: 30rpx 0rpx;
}

.column-item-right {
    margin: 0rpx 0rpx 0rpx 20rpx;
    padding-right: 40rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    flex: 1;
}

.column-item-cover {
    margin-right: 30rpx;
}

.column-item-name {
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #363B3E;
    text-overflow: ellipsis;
    overflow: hidden;
}

.column-item-detail {
    margin-top: 10rpx;
    line-height: 35rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #898989;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    display: -webkit-box;
}

.column-item-detail text:last-child {
    margin-left: 20rpx;
}

.icon-more-box {
    height: 100%;
    width: 45rpx;
    text-align: center;
}

.icon-more {
    margin-bottom: 10rpx;
    width: 33rpx;
    height: 8rpx;
}

.book-detail {
    width: 650rpx;
    height: 970rpx;
    margin-top: 90rpx;
    position: relative;
}

.close-btn {
    width: 42rpx;
    height: 42rpx;
    position: absolute;
    top: 0;
    right: 0rpx;
}

.detail-cover-box {
    display: block;
    text-align: center;
    margin-bottom: 30rpx;
}

.detail-cover {
    border-radius: 12rpx;
}

.detail-time,
.detail-create {
    width: fit-content;
    margin: 0 auto;
    font-size: 20rpx;
    color: #fff;
}

.detail-name {
    width: fit-content;
    font-size: 28rpx;
    color: #fff;
    margin: 25rpx auto 10rpx auto;
}

.path-parent-box-big {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin: 0rpx auto 20rpx auto;
    width: 630rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #363B3E;
}

.path-parent-box-big view{
    padding: 4rpx 7rpx;
}

.path-parent-box-big text {
    display: block;
    margin: 0rpx 8rpx;
}

.clickable {
    color: #409EFF;
}

.menu-top {
    width: 690rpx;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    padding: 10rpx 0rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
    color: #898989;
   justify-content: flex-start;
}

.menu-top image {
    width: 50rpx;
    height: 60rpx;
    margin-right: 30rpx;
}

.menu-top text{
    flex: 1;
    display: block;
    width: fit-content;
    height: fit-content;
    margin-top: 10rpx;
}

.menu-center {
    width: 690rpx;
    height: 100rpx;
    margin: 45rpx auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 10rpx 0rpx;
    font-size: 26rpx;
    color: #363B3E;
    justify-content: center;
}

.menu-center image {
    width: 32rpx;
    height: 30rpx;
    margin-right: 40rpx;
}

.menu-bottom {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background-color: rgb(249, 249, 249);
    line-height: 100rpx;
    letter-spacing: 1rpx;
    text-align: center;
    font-size: 28rpx;
    color: black;
    padding-bottom: env(safe-area-inset-bottom);
}

.order-top {
    margin: 0 auto;
    width: 680rpx;
    height: 110rpx;
    line-height: 125rpx;
    font-size: 26rpx;
    color: #898989;
}

.order-center {
    width: 680rpx;
    height: 110rpx;
    line-height: 110rpx;
    margin: 0rpx auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: black;
}

.order-center image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 40rpx;
}

.active {
    color: #409EFF;
}

.nodata {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
}

.nodata-img {
    width: 348rpx;
    height: 200rpx;
}

.nodata-text {
    margin-top: 30rpx;
    display: block;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(142, 152, 163, 1);
}