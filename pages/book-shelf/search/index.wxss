page {
    width: 100%;
    height: 100%;
    background-color: rgb(255, 255, 255);
}

.index-page {
    width: 100%;
    height: 100%;
}

.page-top {
    width: 680rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin: 30rpx auto 35rpx auto;
}

.search-box {
    width: 600rpx;
    height: 80rpx;
}

.cancel-box {
    color: #409EFF;
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
}

.search-result {
    width: 680rpx;
    margin: 0 auto;
    font-size: 26rpx;
    color: #8E98A3;
}

.book-column {
    width: fit-content;
    margin: 40rpx auto;
}

.column-item {
    border-radius: 5rpx;
    width: 680rpx;
    margin: auto 0rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
   margin-top: 60rpx;
}

.column-item-right {
    margin: 0rpx 0rpx 0rpx 20rpx;
    padding-right: 40rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    flex: 1;
}

.column-item-cover {
    margin-right: 10rpx;
}

.column-item-name {
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #363B3E;
    text-overflow: ellipsis;
    overflow: hidden;
}

.column-item-path {
    margin-top: 8rpx;
    line-height: 35rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #8E98A3;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    display: -webkit-box;
}


.icon-more-box {
    width: 100rpx;
    height: 70rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    text-align: center;
    line-height: 70rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #8E98A3;
}

.notransform {
    margin-left: 50rpx;
    width: 33rpx;
    height: 33rpx;
}

.transform {
    margin-left: 50rpx;
    width: 33rpx;
    height: 33rpx;
    transform: rotate(180deg);
    animation: rotate 0.4s;
}

@keyframes rotate {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(180deg);
    }
}

.info-more{
    width: 602rpx;
    padding-left: 78rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #8E98A3;
    animation: myfirst 1.2s;
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.path-box{
    margin-top: 8rpx;
    flex: 1;
}


.path-column:last-child{
    margin-top: 10rpx;
    width: fit-content;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

@keyframes myfirst {
    from {
      opacity: 0;
    }
  
    to {
      opacity: 1;
    }
  }


.path-row{
    padding: 4rpx 5rpx;
}

.nodata {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
}

.nodata-img {
    width: 348rpx;
    height: 200rpx;
}

.nodata-text {
    margin-top: 30rpx;
    display: block;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(142, 152, 163, 1);
}