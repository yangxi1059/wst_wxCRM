page {
    width: 100%;
    height: 100%;
    background-color: #FFFFFF;
}

.index-page {
    width: 670rpx;
    margin: 0rpx auto;
    padding-bottom: 70rpx;
}

.company-img {
    width: 150rpx;
    height: 150rpx;
    margin: 29rpx auto 37rpx auto;
    background-color: #FFFFFF;
    border-radius: 38rpx;
    display: flex;
    align-items: center;
}

.company-img image {
    width: 150rpx;
    height: 150rpx;
    margin: 0 auto;
    display: block;
    border-radius: 38rpx;
}

.company-box {
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 16rpx;
}

.company-name {
    font-size: 40rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #293648;
}

.company-jobFunction {
    display: block;
    margin-top: 16rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    color: #8896AF;
}

.company-difficulty {
    margin-top: 23rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 22rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #8896AF;
}

.company-location {
    margin-top: 9rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #C53A51;
}

.row-box {
    margin-top: 31rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 670rpx;
    background: #FFFFFF;
}

.row-item {
    width: 49%;
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #1B233F;
    margin: 0 auto;
}

.row-item text {
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #8896AF;
}

.row-item-img {
    margin-top: 18rpx;
    display: flex;
    flex-direction: row;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #1B233F;
}

.red-line {
    width: 4rpx;
    height: 26rpx;
    background: #C53A51;
    margin: 4rpx 15rpx 0rpx 0rpx;
}

.ic-dingwei {
    width: 19rpx;
    height: 23rpx;
    margin-right: 12rpx;
}

.ic-shenqing {
    width: 22rpx;
    height: 25rpx;
    margin-right: 10rpx;
}

.level-box {
    margin-left: 10rpx;
}

.level-box image {
    width: 20rpx;
    height: 20rpx;
    margin-top: 9rpx;
    margin-right: 8rpx;
}

.interview-content {
    width: 100%;
    background: #FFFFFF;
    border-radius: 50rpx;
}

.title {
    margin-top: 70rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #C53A51;
}

.content {
    display: block;
    margin-top: 26rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #293648;
    line-height: 46rpx;
}

.more-interview {
    padding-top: 30rpx;
    border-top: 1px solid #F2F3F8;
    margin-top: 23rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #171F3D;
}

.more-interview text:last-child {
    color: #C53A51;
}

.interview-list {
    width: 100%;
    margin: 0 auto;
}