page {
    background: #F8F9FA;
    width: 100%;
    height: 100%;
}

.index-page {
    margin: 0 auto;
    width: 100%;
    height: 100%;
    padding-bottom: 30rpx;
}

.detail-top {
    width: 100%;
    height: 115rpx;
    border-bottom: 1rpx solid rgb(226, 226, 226);
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #fff;
    /* padding-left: 45rpx; */
}

.detail-top-box {
    margin: 0 auto;
    width: 690rpx;
    display: flex;
    flex-direction: row;
}

.company-logo {
    width: 80rpx;
    height: 80rpx;
    border-radius: 100%;
    margin-right: 20rpx;
    border: 1rpx solid rgba(230, 234, 241, 1);
}

.company-info {
    display: flex;
    flex-direction: column;
}

.company-info-up {
    display: block;
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(54, 59, 62, 1);
}

.company-info-down {
    display: block;
    margin-top: 10rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(142, 152, 163, 1);
}

.detail-center {
    margin: 30rpx auto;
    padding: 30rpx 25rpx 42rpx;
    width: 640rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 10rpx 20rpx 0px rgba(165, 181, 196, 0.1);
    border-radius: 12rpx;
}

.title {
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: bold;
    color: rgba(54, 59, 62, 1);
}

.lable {
    margin-top: 20rpx;
    padding-bottom: 30rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    border-bottom: 1rpx solid rgb(0, 0, 0, .1);
}

.lable-item {
    position: relative;
    display: flex;
    margin-bottom: 10rpx;
    padding-right: 5px;
    min-width: 300rpx;
    border-radius: 3px;
    font-size: 22rpx;
    font-weight: 400;
    color: #000000;
    align-items: center;
}



.lable-three {
    position: relative;
    display: flex;
    margin-bottom: 10rpx;
    min-width: 320rpx;
    width: fit-content;
    border-radius: 3px;
    padding-right: 10rpx;
    font-size: 22rpx;
    color: #000000;
    align-items: center;
}

.lable-three text {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #000000;
}

.lable-item text:last-child,
.lable-three text:last-child {
    color: #363B3E;
}

.content-title {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 30rpx 0rpx 18rpx 0rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: bold;
    color: rgba(54, 59, 62, 1);
}

.content-title image {
    margin-right: 12rpx;
    width: 30rpx;
    height: 28rpx;
}

.content {
    width: 100%;
    height: fit-content;
    font-size: 22rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(54, 59, 62, 1);
    line-height: 40rpx;
    white-space: pre-wrap;
    word-wrap: break-word;
}


.urlcontent-title {
    width: 600rpx;
    height: 72rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 20rpx 20rpx -7rpx rgba(165, 181, 196, 0.1);
    border-radius: 36rpx;
    margin: 50rpx auto 20rpx auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 20rpx;
}

.urlcontent-title image {
    margin-left: 12rpx;
    margin-right: 18rpx;
    width: 27rpx;
    height: 28rpx;
}

.urlcontent-title text {
    width: 554rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: bold;
    color: rgba(54, 59, 62, 1);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.pressLongText {
    display: block;
    width: fit-content;
    margin: 0 auto;
    color: #BDBFC1;
    font-size: 22rpx;
    padding-bottom: 40rpx;
}