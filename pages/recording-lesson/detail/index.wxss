page {
    width: 100%;
    height: 100%;
    background-color: #fff;
    color: #333;
    -webkit-font-smoothing: antialiased;
}

.view-page {
    width: 100%;
}

.view-page .page-content {
    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
    box-sizing: border-box;
    -webkit-overflow-scrolling: touch;
}

.index-page {
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.lessson-video-box {
    width: 100%;
    height: 230px;
    position: relative;
}

.playProgress {
    position: absolute;
    bottom: 80px;
    left: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 20rpx 0 21rpx;
    height: 50rpx;
    background: rgba(36, 36, 36, 1);
    border-radius: 0px 100rpx 100rpx 0px;
    font-size: 20rpx;
    font-weight: 400;
    line-height: 60rpx;
    color: rgba(255, 255, 255, 1);
}

.playProgress image {
    margin-left: 16rpx;
    width: 16rpx;
    height: 16rpx;
}

.playProgress-text text {
    color: #FF5F5E;
    margin-left: 5rpx;
}

.lesson-cover-info {
    width: 100%;
    position: relative;
}

.lesson-cover-img {
    width: 100%;
    height: 455rpx;
    background-size: 100%;
    background-repeat: no-repeat;
}

.lesson-mask {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 455rpx;
    background-color: #000000;
    opacity: 0.3;
}

.lesson-cover-text {
    display: block;
    background-color: #00000086;
    width: fit-content;
    padding: 6rpx 15rpx;
    position: absolute;
    top: 30rpx;
    left: 30rpx;
    border-radius: 6rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
}

.lesson-cover-title {
    display: block;
    position: absolute;
    top: 200rpx;
    left: 30rpx;
    color: #fff;
    font-weight: 600;
    width: 90%;
}

.lesson-cover-box {
    position: absolute;
    top: 370rpx;
    left: 30rpx;
    display: flex;
    flex-direction: row;
    width: fit-content;
    justify-content: flex-start;
}

.lesson-cover-lable {
    margin-right: 20rpx;
    display: block;
    background-color: #00000086;
    width: fit-content;
    padding: 6rpx 15rpx;
    border-radius: 6rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
}

.lesson-cover-text-right {
    display: block;
    background-color: #0000006b;
    width: fit-content;
    padding: 15rpx 10rpx 15rpx 0rpx;
    position: absolute;
    top: 0;
    right: 0;
    border-radius: 6rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    border-top-left-radius: 40rpx;
    border-bottom-left-radius: 40rpx;
    display: flex;
    flex-direction: row;
}

.lesson-cover-text-right image {
    width: 37rpx;
    height: 37rpx;
    margin: 0 14rpx 0rpx 12rpx;
}

.lesson-info {
    width: 90%;
    margin: 0 auto;
}

.lesson-title {
    width: 670rpx;
    margin-top: 45rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-family: PingFangSC-Medium, PingFang SC;
}

.lesson-title text {
    font-size: 28rpx;
    color: #363B3E;
    display: block;
}


.subscribe,
.nosubscribe {
    min-width: 90rpx;
    padding: 0 15rpx;
    height: 57rpx;
    background: rgba(195, 46, 71, 1);
    border-radius: 6rpx;
    color: #fff;
    font-size: 24rpx;
    line-height: 60rpx;
    text-align: center;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.lesson-title view image,
.lesson-title button image {
    margin-right: 6rpx;
    width: 24rpx;
    height: 24rpx;
}

button {
    padding: 0;
}

button::after {
    border: 1rpx solid transparent;
}

.nosubscribe {
    background: rgba(137, 137, 137, 1);
}

.lesson-level {
    height: 85rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid rgb(0, 0, 0, 0.1);
    font-size: 26rpx;
    color: #898989;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.lesson-tip {
    padding: 30rpx 0rpx 10rpx 0rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    color: rgba(54, 59, 62, 1);
}

.lesson-time {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding-bottom: 30rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #898989;
}

/* 导师信息 */
.mentor-box {
    width: 100%;
    padding-bottom: 30rpx;
    margin: 0 auto;
}

.mentor-title {
    display: block;
    margin-top: 11rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    color: rgba(54, 59, 62, 1);
}

.mentor-info {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.mentor-cover {
    width: 130rpx;
    height: 130rpx;
    border-radius: 100%;
    margin-right: 39rpx;
    background-size: cover;
    background-position: center;
}

.mentor-info-right {
    flex: 1;
    width: 420rpx;
}

.mentor-name {
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    color: rgba(54, 59, 62, 1);
}

.red-circle {
    width: 10rpx;
    height: 10rpx;
    background: rgba(195, 46, 71, 1);
    border-radius: 100%;
    margin-right: 12rpx;
    margin-top: 13rpx;
}

.conpany-logo {
    margin: 10rpx 0rpx;
    width: auto;
    height: 28rpx;
}

.mentor-intro {
    margin-top: 16rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #898989;
    white-space: pre-wrap;
    word-wrap: break-word;
    display: flex;
    flex-direction: row;
    align-items: top;
}

.mentor-intro text {
    flex: 1;
}

.course-list-box {
    width: 100%;
    border-top: 15rpx solid #F5F6F7;
    padding-bottom: 80rpx;
    animation: myfirst 0.5s;
}

@keyframes myfirst {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.course-list-title {
    width: 710rpx;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 31rpx 0rpx;
    font-size: 26rpx;
    font-family: Manrope-ExtraLight_Regular, Manrope;
    font-weight: normal;
    color: rgba(54, 59, 62, 1);
}

.downIcon {
    width: 48rpx;
    height: 48rpx;
    transform: rotate(0deg);
    transition: all 0.2s;
}

.list-add-open {
    transform: rotate(180deg);
}

.course-list-content {
    width: 710rpx;
    margin: 0 auto;
    border-radius: 12rpx;
    border: 1rpx solid #DFE0E2;
    transform: rotateZ(360deg);
    overflow: hidden;
}

.course-item-box-big .van-cell {
    background: rgba(243, 244, 245, 1);
    border-bottom: 1rpx solid rgba(223, 224, 226, 1);
    padding: 16rpx 20rpx;
    font-size: 26rpx;
    font-family: Manrope-ExtraLight_Medium, Manrope;
    font-weight: normal;
    color: rgba(54, 59, 62, 1);
}

.course-item-box-big .van-cell__value {
    color: rgba(54, 59, 62, 1);
    font-size: 22rpx;
}

.course-item-box-big .van-icon-arrow:before {
    content: " ";
}

.course-item-box-big .van-collapse-item__content {
    padding: 0;
}

.course-item-box-big .van-cell__title {
    width: 260px !important;
    flex: none;
}

.course-item-box-small {
    width: 670rpx;
    padding: 20rpx 20rpx;
    border-bottom: 1rpx solid #DFE0E2;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: baseline;
}

.course-item-box-small:last-child {
    border-bottom: none;
}

.course-item-box-small-left {
    width: 420rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    font-size: 24rpx;
    font-family: Manrope-ExtraLight_Regular, Manrope;
    font-weight: normal;
    color: rgba(54, 59, 62, 1);
}

.course-item-box-small-left text {
    flex: 1;
}

.course-item-box-small-left image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 15rpx;
    margin-top: 5rpx;
    display: block;
}

.course-item-box-small-right {
    width: 280rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    font-size: 22rpx;
    font-family: Manrope-ExtraLight_Regular, Manrope;
    font-weight: normal;
    color: #b5b5b6;
}

.course-item-box-small-right text:first-child {
    margin-right: 25rpx;
}

.videoPlaying text {
    color: #C32E47;
}

.active {
    color: rgba(195, 46, 71, 1);
}



.marquee_box {
    width: 100%;
    position: relative;
}

.marquee_text {
    white-space: nowrap;
    position: absolute;
    color: #c32e47;
    opacity: .8;
}

video {
    width: 100%;
    height: 230px;
}


.pop-ups {
    width: fit-content;
    margin: 0 auto;
}

.pop-up-image {
    width: 372rpx;
    height: 255rpx;
    display: block;
    margin: 126rpx auto 35rpx auto;
}

.pop-up-text {
    width: 80%;
    margin: 0 auto;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(54, 59, 62, 1);
    display: block;
    text-align: center
}

.pop-up-text text {
    color: #C32E47;
    margin: 0 4rpx;
}

.pop-up-button {
    width: 480rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin: 62rpx auto 0rpx auto;
}

.dingyue-btn {
    width: 480rpx;
    height: 100rpx;
    background: rgba(195, 46, 71, 1);
    border-radius: 12rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
}

.pop-ups-close-image {
    position: absolute;
    right: 36rpx;
    top: 36rpx;
    width: 42rpx;
    height: 42rpx;
}

.nosubscribe-box {
    background: #fff;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 562rpx;
    height: 300rpx;
    margin-top: 0px;
    z-index: 10000;
    border-radius: 6rpx;
}

.nosubscribe-title {
    display: block;
    margin-top: 80rpx;
    color: #3b3b3b;
    font-size: 14px;
    text-align: center;
}

.nosubscribe-button {
    font-size: 14px;
    margin: 0 auto;
    margin-top: 20px;
    text-align: center;
    width: 82px;
    height: 30px;
    line-height: 30px;
    color: #fff;
    border-radius: 3px;
    background-color: #898989;
}

.mask {
    position: fixed;
    z-index: 9999;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    display: block;
}



