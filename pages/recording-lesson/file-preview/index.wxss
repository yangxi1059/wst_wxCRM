page {
    background-color: black;
}

.index-page {
    width: 100%;
    height: fit-content;
}

.index-page image {
    width: 100%;
    height: 100%;
}

.current-page {
    position: fixed;
    top: 10rpx;
    right: 42rpx;
    width: fit-content;
    height: fit-content;
    padding: 9rpx 24rpx;
    background: rgb(0, 0, 0, .3);
    border-radius: 23rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
}


.switch-page {
    position: fixed;
    bottom: 126rpx;
    right: 42rpx;
    display: flex;
    flex-direction: row;
}

.left-button {
    width: 64rpx;
    height: 55rpx;
    background: #D8D8D8;
    border-radius: 100rpx 0px 0px 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 4rpx;
}

.right-button {
    width: 64rpx;
    height: 55rpx;
    background: #D8D8D8;
    border-radius: 0rpx 100rpx 100rpx 0rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}