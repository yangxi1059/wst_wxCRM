.index-page {
    width: 690rpx;
    margin: 0rpx auto;
    padding-bottom: 40rpx;
}

.page-title {
    padding: 30rpx 0rpx 26rpx 0rpx;
    display: block;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    color: #000000;
}

.progress-box {
    width: 640rpx;
    background-color: #ffffff;
    padding: 34rpx 25rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
}

.target-box {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #363B3E;
}

.target-content {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.target-content image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
}

.progress-item:last-child {
    margin-top: 66rpx;
}


.progress-text {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.progress-name {
    margin-right: 20rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #363B3E;
}

.weui-progress {
    margin: 20rpx auto 0 auto;
    width: 98%;
    height: 15rpx;
    border-radius: 100rpx;
    overflow: hidden
}



.ticheng-box {
    margin-top: 35rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #363B3E;
}

.ticheng-left {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.ticheng-left image {
    width: 84rpx;
    height: 84rpx;
    border-radius: 100%;
    margin-right: 20rpx;
}

.info-box {
    display: block;
    margin-top: 30rpx;
    width: 100%;
    line-height: 45rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #363B3E;
}